<h2>Sign Up</h2>

<form action="<%= users_url %>" method="post">

  <%= auth_token %>

  <label for="user_username">Username: </label><br/>
  <input id ="user_username" type="text" name="user[username]" value="<%=@user.username %>">
<br/>
<br/>
  <label for="user_password">Password: </label><br/>
  <input id="user_password" type="password" name="user[password]">
<br/>
<br/>
  <input type="submit" value="Sign Up">
</form>

<br/>

<p>Already have an account? <%= link_to "Sign in", new_session_url %>.
